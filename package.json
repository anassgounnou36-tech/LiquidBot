{
  "name": "liquidbot",
  "version": "0.1.0",
  "private": true,
  "description": "LiquidBot - Aave V3 Base Liquidation Protection Service",
  "license": "MIT",
  "workspaces": [
    "backend",
    "backend-v2",
    "contracts"
  ],
  "scripts": {
    "contracts:build": "cd contracts && npm run build",
    "contracts:test": "cd contracts && npm run test",
    "contracts:test:fork": "cd contracts && npm run test:fork",
    "contracts:e2e:local": "cd contracts && npm run e2e:local",
    "contracts:e2e:fork": "cd contracts && npm run e2e:fork",
    "contracts:verify": "cd contracts && npm run verify:executor",
    "contracts:deploy": "cd contracts && npm run deploy:executor",
    "test": "cd backend && npm test",
    "test:all": "npm run contracts:test && npm run test",
    "hardhat:node": "hardhat node",
    "fork:setup": "ts-node backend/scripts/fork/setup-scenario.ts"
  },
  "devDependencies": {
    "hardhat": "^2.22.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "ethers": "^6.10.0",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "dotenv": "^16.4.5"
  }
}
